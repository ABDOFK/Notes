{
  "compilerOptions": {
    "target": "es6",                                   // Set the JavaScript language version.
    "module": "commonjs",                              // Specify what module code is generated.
    "rootDir": "./src",                               // Specify the root folder of your source files.
    "outDir": "./dist",                               // Specify an output folder for all emitted files.
    "esModuleInterop": true,                           // Enable compatibility with CommonJS modules.
    "forceConsistentCasingInFileNames": true,         // Ensure correct casing in imports.
    "strict": true,                                    // Enable all strict type-checking options.
    "skipLibCheck": true,                             // Skip type checking of all .d.ts files.
    "noUnusedLocals": true,                           // Report errors on unused local variables.
    "noUnusedParameters": true,                       // Report errors on unused function parameters.
    "noImplicitAny": true,                            // Raise error on expressions and declarations with an implied 'any' type.
    "strictNullChecks": true,                         // Enable strict null checks.
    "resolveJsonModule": true,                        // Allow importing .json files.
    "moduleResolution": "node"                         // Specify how TypeScript looks up files from a given module specifier.
  },
  "include": ["src/**/*.ts"],                         // Specify the files to include in the project, adjust this to include all .ts files in src.
  "exclude": ["node_modules"]                        // Exclude the node_modules directory.
}
